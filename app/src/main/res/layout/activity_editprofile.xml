<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editprofile"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"

    >
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_goback"
        android:backgroundTint="@color/black"

        android:id="@+id/backArrowEditProfile"



        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePictureImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Picture"
        android:layout_below="@+id/profilePictureImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/changePictureButton"

        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="26dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="25sp"

        />

    <EditText
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUsername"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="15dp"

        android:layout_toRightOf="@+id/textViewName"
        android:id="@+id/editTextName"
        />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePictureButton"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/textViewUsername" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changePictureButton"
        android:layout_marginTop="24dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="25sp"


        />

    <TextView
        android:id="@+id/textViewBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_marginTop="78dp"
        android:text="Bio"
        android:textColor="@color/black"
        android:textSize="25sp"


        />

    <EditText
        android:id="@+id/editTextTextMultiLineBio"
        android:layout_width="228dp"
        android:layout_height="126dp"
        android:layout_below="@id/editTextName"
        android:layout_marginStart="35dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@id/textViewUsername"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"

        />

    <Button
        android:id="@+id/buttonSaveChanges"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextMultiLineBio"

        android:layout_marginLeft="150dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/rounded_button"
        android:text="Save changes"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>