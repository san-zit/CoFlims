<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personalProfile"

    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"


    >

    <ImageView
        android:id="@+id/profilePictureImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/profilepictureshaperound"
        app:srcCompat="@drawable/user" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanjit Rijal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/profilePictureImageView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/holoBlue"
        android:id="@+id/userNameTextView"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/countLinearLayout"


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"

            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:id="@+id/followingCountTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="231"


            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="90dp"

            android:id="@+id/followersCountTextView"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"

            android:id="@+id/likesCountTextView"
            android:textColor="@color/black"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countLinearLayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/followingfollowersLinearLayout"


        >

        <TextView
            android:id="@+id/followingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Following"
            android:textSize="20sp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"


            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"

            android:id="@+id/followersTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="likes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="52dp"

            android:id="@+id/likesTextView"
            />



    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/followingfollowersLinearLayout"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile"
        android:textSize="18sp"
        android:id="@+id/editProfileButton"

        android:layout_marginTop="10dp"
        android:background="@color/holoBlue"/>



    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="321dp"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tabs"

        />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfileButton"
        android:id="@+id/tabs"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answers" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gridView"


        >


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonHome"
            android:background="@drawable/ic_home"
            android:layout_marginRight="30dp"

            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSearch"
            android:background="@drawable/ic_search"
            android:layout_marginRight="30dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonAdd"
            android:background="@drawable/ic_add"
            android:layout_marginRight="30dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonMessage"
            android:background="@drawable/ic_message"
            android:layout_marginRight="30dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonUser"
            android:background="@drawable/user"
            />


    </LinearLayout>


</RelativeLayout>