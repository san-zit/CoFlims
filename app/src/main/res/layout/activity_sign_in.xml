<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signIn"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_goback"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/backArrowSignIn"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"

        />

    <Button
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="#4267B2"
        android:text="Sign in with Facebook"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:id="@+id/buttonSignInWithFacebook"
        android:drawableLeft="@mipmap/ic_facebooklogo_foreground"






        />

    <Button
        android:id="@+id/buttonSignInWithGoogle"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"

        android:text="Sign in with Google"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="#DB4437"
        android:textSize="20dp"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/ic_googlelogo_foreground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username or Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:hint="Username"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/user"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/password"
            android:hint="**********"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/ic_viewpassword"
            android:id="@+id/viewPasswordSigninImageButton"/>


    </LinearLayout>
    <Button
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:text="Sign In"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:background="#ff0099cc"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        android:id="@+id/signinButton"


        />
    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#00008B"
        android:textStyle="bold"
        android:id="@+id/textViewForgetPassword"

        />

</LinearLayout>