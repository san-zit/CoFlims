<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessengerList"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    >


    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_goback"
        android:backgroundTint="@color/black"
        android:layout_gravity="left"



        />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messenger List"

            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Message"
            android:layout_below="@+id/inboxtextview"
            android:id="@+id/new_message_button"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:textStyle="bold"



            android:layout_marginLeft="10dp"


            />






    <ListView
        android:id="@+id/messenger_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#F1E1DA" />


</LinearLayout>